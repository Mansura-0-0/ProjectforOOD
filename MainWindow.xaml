<Window x:Class="Project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project"
        mc:Ignorable="d"
        Title="MainWindow" Height="438" Width="844">
    <Grid Margin="0,0,10,-6">
        <Grid.RowDefinitions>
            <RowDefinition Height="54*"/>
            <RowDefinition Height="323*"/>
            <RowDefinition Height="49*"/>
        </Grid.RowDefinitions>
        <StackPanel x:Name="tasklist" Margin="47,37,441,43" Grid.Row="1" Background="Azure" />
        <StackPanel x:Name="taskdetail" Margin="422,41,58,39" Grid.Row="1" Background="Azure">

        </StackPanel>
        <Label Content="Task List"  FontWeight="Bold" FontSize="16" HorizontalAlignment="Left" Margin="73,10,0,0" Grid.Row="1" VerticalAlignment="Top" Width="130" Height="31"/>
        <Label Content="Add task"  FontWeight="Bold" FontSize="16" HorizontalAlignment="Left" Margin="535,10,0,0" Grid.Row="1" VerticalAlignment="Top" Width="130" Height="31"/>


        <Label Content="Progress" Margin="47,7,662,10" Grid.Row="2"  FontWeight="Bold" FontSize="12"/>
        <TextBlock TextWrapping="Wrap" Text="" Margin="146,13,540,19" RenderTransformOrigin="0.5,0.5" Grid.Row="2">


        </TextBlock>
        <Button x:Name="alltaskbtn" Content="All Task" Margin="73,16,632,16" Click="alltaskbtn_Click"/>
        <Button x:Name="addbtn" Content="Add " Margin="433,287,294,0" Grid.Row="1" Click="addbtn_Click"/>
        <Button x:Name="deletebtn" Content="Delete " Margin="187,289,540,47" Grid.Row="1" Grid.RowSpan="2" Click="deletebtn_Click"/>
        <Button x:Name="donebtn" Content="Done " Margin="47,289,680,47" Grid.Row="1" Grid.RowSpan="2" Click="donebtn_Click"/>
        <ComboBox x:Name="prioritybx" Margin="514,226,185,60" Grid.Row="1" RenderTransformOrigin="0.633,0.489"/>
        <Label Content="Priority :" Margin="433,226,306,60" Grid.Row="1"/>
        <TextBox x:Name="searchbx" TextWrapping="Wrap" Text="Search Task" Margin="361,14,376,13"/>
        <DatePicker x:Name="datebx" Margin="514,177,185,109" Grid.Row="1"/>
        <TextBox x:Name="descbx" Margin="514,121,185,164" Grid.Row="1" TextWrapping="Wrap" Text=""/>
        <Label Content="Due Date :" Margin="433,177,306,109" Grid.Row="1"/>
        <Label Content="Description :" Margin="433,121,306,164" Grid.Row="1"/>
        <Label Content="Title :" Margin="433,89,340,207" Grid.Row="1" RenderTransformOrigin="0.361,0.605"/>
        <TextBox x:Name="titlebx" Margin="514,86,185,207" Grid.Row="1" TextWrapping="Wrap" Text="" />








    </Grid>
</Window>
