<Window x:Class="Project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Task Guru" Height="550" Width="900" ResizeMode="CanResize">

	<Grid Background="#FCE4EC" Margin="10">

		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<!-- Header -->
			<RowDefinition/>
			<!-- Main Content -->
			<RowDefinition Height="Auto" MinHeight="55.96"/>
			<!-- Progress -->
		</Grid.RowDefinitions>

		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="2*"/>
			<ColumnDefinition Width="3*"/>
		</Grid.ColumnDefinitions>

		<!-- Header -->
		<Border Grid.Row="0" Background="#E91E63" Padding="20" CornerRadius="0,0,15,15" Margin="23,0,109,66">
			<StackPanel>
				<TextBlock Text="✨ Task Guru ✨" FontSize="20" FontWeight="Bold" Foreground="White"/>
				<TextBlock Text="Get Your Sh*t Together" FontSize="14" Foreground="#FCE4EC"/>
			</StackPanel>
		</Border>

		<!-- Left Panel -->
		<Border Grid.Column="0" Margin="10,104,0,41" Background="White" CornerRadius="15" Padding="15" Grid.RowSpan="3">
			<StackPanel Margin="0,0,-5,-5">
				<TextBlock Text="Task List" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
				<TextBox x:Name="searchbx" Margin="0,0,0,10" Height="28" VerticalContentAlignment="Center" Padding="5"
                         Foreground="Gray" Text="Search tasks..." GotFocus="Searchbx_GotFocus" LostFocus="Searchbx_LostFocus"/>
				<ListView x:Name="taskListView" Height="200" SelectionChanged="taskListView_SelectionChanged" Margin="0,0,0,10" Width="211"/>

				<!-- Buttons with spacing -->
				<StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0" >
					<Button x:Name="alltaskbtn" Content="All Tasks" Width="80" Margin="5,0" Click="alltaskbtn_Click" Background="#E91E63" Foreground="White"/>
					<Button x:Name="donebtn" Content="Done" Width="80" Margin="5,0" Click="donebtn_Click" Background="#E91E63" Foreground="White"/>
					<Button x:Name="deletebtn" Content="Delete" Width="80" Margin="5,0" Click="deletebtn_Click" Background="#E91E63" Foreground="White"/>
				</StackPanel>
			</StackPanel>
		</Border>

		<!-- Right Panel -->
		<Border Grid.Column="1" Background="White" CornerRadius="15" Padding="20" Margin="10,10,10,28" Grid.RowSpan="3">
			<StackPanel>
				<TextBlock Text="Add Task" FontSize="20" FontWeight="Bold" Margin="0,0,0,15"/>
				<TextBlock Text="Title"/>
				<TextBox x:Name="titlebx" Margin="0,0,0,10" Height="28" Padding="5"/>
				<TextBlock Text="Description"/>
				<TextBox x:Name="descbx" AcceptsReturn="True" TextWrapping="Wrap" Height="80" Margin="0,0,0,10" Padding="5"/>
				<TextBlock Text="Due Date" Height="27"/>
				<DatePicker x:Name="datebx" Margin="0,0,0,10"/>
				<TextBlock Text="Priority" Height="26"/>
				<ComboBox x:Name="prioritybx" Margin="0,0,0,15" Height="36"/>

				<!-- Add button full width and pink -->

				<StackPanel x:Name="taskDetailsPanel" Margin="0,10,0,0"/>
				<Button x:Name="addbtn" Content="Add Task" Height="35" Background="#E91E63" Foreground="White" Click="addbtn_Click"/>
			</StackPanel>
		</Border>

		<!-- Progress Bar -->
		<StackPanel Grid.Row="2" Grid.Column="0" Margin="0,15,0,0">
			<TextBlock Text="Progress" FontWeight="SemiBold" Width="58" Height="24"/>
			<Border Height="16" Background="#F8BBD0" CornerRadius="10" Width="282">
				<Border x:Name="progressFill" Width="100" Background="#E91E63" CornerRadius="10"/>
			</Border>
		</StackPanel>

	</Grid>
</Window>