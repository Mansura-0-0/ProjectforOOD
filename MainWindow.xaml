<Window x:Class="Project.MainWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:local="clr-namespace:Project" mc:Ignorable="d" Title="MainWindow" Height="438" Width="844">
	<!-- ✅ RESOURCES MUST BE HERE -->
	<Window.Resources>
		<!-- Pink Palette -->
		<SolidColorBrush x:Key="PrimaryColor" Color="#E91E63"/>
		<!-- Main Pink -->
		<SolidColorBrush x:Key="LightPink" Color="#FCE4EC"/>
		<!-- Background -->
		<SolidColorBrush x:Key="CardColor" Color="#FFFFFF"/>
		<!-- Cards -->
		<SolidColorBrush x:Key="SoftAccent" Color="#F8BBD0"/>
		<!-- Soft Border -->
		<SolidColorBrush x:Key="HoverPink" Color="#D81B60"/>
		<!-- Hover -->
		<!-- Modern Button Style -->
		<Style TargetType="Button">
			<Setter Property="Background" Value="{StaticResource PrimaryColor}"/>
			<Setter Property="Foreground" Value="White"/>
			<Setter Property="FontWeight" Value="SemiBold"/>
			<Setter Property="Padding" Value="8"/>
			<Setter Property="Margin" Value="5"/>
			<Setter Property="BorderThickness" Value="0"/>
			<Setter Property="Cursor" Value="Hand"/>
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="Button">
						<Border Background="{TemplateBinding Background}" CornerRadius="10" Padding="{TemplateBinding Padding}">
							<ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
						</Border>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
			<Style.Triggers>
				<Trigger Property="IsMouseOver" Value="True">
					<Setter Property="Background" Value="{StaticResource HoverPink}"/>
				</Trigger>
			</Style.Triggers>
		</Style>
		<!-- Rounded TextBox -->
		<Style TargetType="TextBox">
			<Setter Property="Padding" Value="6"/>
			<Setter Property="Margin" Value="0 5 0 10"/>
			<Setter Property="BorderBrush" Value="{StaticResource SoftAccent}"/>
			<Setter Property="BorderThickness" Value="2"/>
		</Style>
	</Window.Resources>

	<Grid Background="{StaticResource LightPink}">

		<!-- 3 Rows: Header | Content | Progress -->
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<!-- 2 Columns -->
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="2*"/>
			<ColumnDefinition Width="3*"/>
		</Grid.ColumnDefinitions>

		<!-- 💖 HEADER (Top Left) -->
		<Border Grid.Row="0"
				Background="#E91E63"
				Padding="20"
				 Margin="0,0,59,10"
				>

			<StackPanel>

				<TextBlock Text="✨ Task Guru ✨"
						   FontSize="30"
						   FontWeight="Bold"
						   Foreground="White" Height="39" Width="237"/>

				<TextBlock Text="Get Your Sh*t Together"
						   FontSize="14"
						   Foreground="#FCE4EC"
						   Margin="0,5,0,0"/>
			</StackPanel>

		</Border>

		<!-- LEFT PANEL -->
		<Border Grid.Row="1"
				Grid.Column="0"
				Margin="20"
				CornerRadius="20"
				Background="White"
				Padding="20">

			<Grid>
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="*"/>
					<RowDefinition Height="Auto"/>
				</Grid.RowDefinitions>

				<TextBlock Grid.Row="0"
						   Text="Task List"
						   FontSize="20"
						   FontWeight="Bold"
						   Margin="0 0 0 15"/>

				<TextBox Grid.Row="1"
						 x:Name="searchbx"/>

				<ScrollViewer Grid.Row="2"
							  Margin="0,10,0,10">
					<StackPanel x:Name="tasklist"
								Background="#FCE4EC"/>
				</ScrollViewer>

				<StackPanel Grid.Row="3"
							Orientation="Horizontal"
							HorizontalAlignment="Center">

					<Button x:Name="alltaskbtn"
							Content="All Tasks"
							Click="alltaskbtn_Click"/>

					<Button x:Name="donebtn"
							Content="Done"
							Click="donebtn_Click"/>

					<Button x:Name="deletebtn"
							Content="Delete"
							Click="deletebtn_Click"/>
				</StackPanel>
			</Grid>
		</Border>

		<!-- RIGHT PANEL -->
		<Border
				Grid.Column="1"
				Margin="0,10,27,10"
				CornerRadius="20"
				Background="White"
				Padding="25" Grid.RowSpan="3">

			<Grid>
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="*"/>
					<RowDefinition Height="Auto"/>
				</Grid.RowDefinitions>

				<TextBlock Grid.Row="0"
						   Text="Add Task"
						   FontSize="20"
						   FontWeight="Bold"
						   Margin="0,-22,0,42"/>

				<TextBlock Text="Title" Margin="0,11,0,21"/>
				<TextBox x:Name="titlebx" Margin="0,32,0,31" Grid.RowSpan="3"/>

				<TextBlock Text="Description" Margin="0,63,0,0" Grid.RowSpan="2"/>
				<TextBox Grid.Row="4"
						 x:Name="descbx"
						 TextWrapping="Wrap"
						 AcceptsReturn="True" Margin="0,10,5,24"/>

				<StackPanel Grid.Row="5"
							Margin="0 15 0 15">
					<DatePicker x:Name="datebx"/>

					<TextBlock Text="Priority"
							   Margin="0 10 0 0"/>
					<ComboBox x:Name="prioritybx"/>
				</StackPanel>

				<Button Grid.Row="6"
						x:Name="addbtn"
						Content="Add Task"
						Height="40"
						Click="addbtn_Click"/>
				<TextBlock Text="Due Date" Margin="-2,52,2,131" Grid.RowSpan="2" Grid.Row="4"/>
			</Grid>
		</Border>

		<!-- 📊 PROGRESS (Bottom Left, Responsive) -->
		<StackPanel Grid.Row="2"
					Grid.Column="0"
					Margin="20"
					VerticalAlignment="Bottom">

			<TextBlock Text="Progress"
					   FontWeight="SemiBold"
					   Margin="0 0 0 8"/>

			<Border Height="18"
					Background="#F8BBD0"
					CornerRadius="10">

				<Border x:Name="progressFill"
						Width="100"
						Background="#E91E63"
						CornerRadius="10"/>
			</Border>
		</StackPanel>

	</Grid>
</Window>
